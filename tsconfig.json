{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    // @formatter:off
    "paths": {
      "~@/*": ["app/web/*"],
      "@/*": ["app/web/*"],
      "@@/*": ["app/web/.umi/*"]
    },
    // @formatter:on
    "allowSyntheticDefaultImports": true
  }
}
